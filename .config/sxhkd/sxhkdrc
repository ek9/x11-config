## sxhkdrc
## Key bindings (hotkeys) for bspwm

### general
###########

# sxhkd reload config
super + Escape
    pkill -USR1 -x sxhkd

# dmenu run
super + r
    dmenu_run

# terminal
super + Return
    termite

# open a "scratchpad" terminal (quake-style terminal)
super + F1
  ~/.local/bin/quaketermite.sh

# lock screen
super + shift + l
  sxlock

# quit / exit
super + shift + Escape
    bspc quit

### bspwm - desktop/window control
#########
# focus specific desktop / move window to specific desktop
super + {_,shift + }{1-9}
    bspc {desktop -f,window -d} desk{1-9}

# toggle last desktop/monitor
super + {Tab,grave}
    bspc {desktop,monitor} -f last


# select main (biggest) window
super + m
    bspc window -s biggest

# swap current windows/desktop with last
super + shift + {Tab,grave}
    bspc {window,desktop} -s last


# close window
super + w
    bspc window -c

# kill window
super + shift + w
    bspc window -k

### bspwm - window modes
# toggle floating, fullscreen
super + {s,f}
    bspc window -t {floating,fullscreen}

# focus/swap windows
super + {_,alt + }{h,j,k,l}
    bspc window -{f,s} {left,down,up,right}

# select next/prev window
super + {_,shift + }c
    bspc window -f {next,prev}

# move windows backward/forward
super + {_,shift +}d
    bspc desktop -C {forward,backward}

# cycle monocle/tiled mode
super + t
    bspc desktop -l next

# balance desktop so all windows occupy the same area.
super + b
    bspc desktop -B

# select monitors
super + bracket{left,right}
    bspc monitor -f {prev,next}

### Window Splitting
####################

# preselect spliting area of current window for new window
super + ctrl + {h,j,k,l}
    bspc window -p {left,down,up,right}
    bspc {window -p cancel,desktop -c}

# move current window to specific desktop

### Mouse
#########
~button1
    bspc pointer -g focus

super + button{1-3}
    bspc pointer -g {move,resize_side,resize_corner}

super + !button{1-3}
    bspc pointer -t %i %i


