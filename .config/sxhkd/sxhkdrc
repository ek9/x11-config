## sxhkdrc
## Key bindings (hotkeys) for bspwm
# quit / exit
super + shift + Escape
    bspc quit

# toggle last window/desktop
super + {Tab,grave}
    bspc {window,monitor} -f last

# toggle last monitor
super + alt + Tab
    bspc monitor -f last

## sxhkd general

# sxhkd reload config
super + Escape
    pkill -USR1 -x sxhkd

#super + alt + Escape

## bspwm - window control

# close window
super + w
    bspc window -c

# kill window
super + shift + w
    bspc window -k

# toggle floating, fullscreen
super + {s,f}
    bspc window -t {floating,fullscreen}

# swap current windows with last
super + shift + Tab
    bspc window -s last

# select main (biggest) window
super + m
    bspc window -s biggest

# focus/swap windows
super + {_,alt + }{h,j,k,l}
    bspc window -{f,s} {left,down,up,right}

# select next/prev window
super + {_,shift + }c
    bspc window -f {next,prev}

# move windows backward/forward
super + {_,shift +}d
    bspc desktop -C {forward,backward}

## bspwm - desktop control

# cycle monocle/tiled mode
super + t
    bspc desktop -l next

# balance desktop so all windows occupy the same area.
super + b
    bspc desktop -B

super + bracket{left,right}
    bspc desktop -f {prev,next}

super + ctrl + {h,j,k,l}
    bspc window -p {left,down,up,right}
    bspc {window -p cancel,desktop -c}

super + alt + {h,j,k,l}
    bspc window -e {left,down,up,right} push

super + alt + shift + {h,j,k,l}
    bspc window -e {right,up,down,left} pull

super + ctrl + {1-9}
    bspc window -r 0.{1-9}

super + {_,shift + }{1-9,0}
    bspc {desktop -f,window -d} {1-9,0}

~button1
    bspc pointer -g focus

super + button{1-3}
    bspc pointer -g {move,resize_side,resize_corner}

super + !button{1-3}
    bspc pointer -t %i %i

## program hotkeys

# terminal
super + Return
#    urxvt
    termite
#    urxvt -e tmux attach

# run
super + r
    dmenu_run

# open a "scratchpad" terminal (quake-style, in this case, on a 1366x768 display)
super + F1
  xdotool search --onlyvisible --classname URxvtQuake windowunmap \
    || xdotool search --classname URxvtQuake windowmap \
    || urxvt -name URxvtQuake -geometry 1360x20+0+20 -tr

super + shift + l
  sxlock
